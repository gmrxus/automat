<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_goods"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    app:cardCornerRadius="2dp"
    app:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_item_goods_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height_card"
            android:layout_marginBottom="4dp"
            android:background="@drawable/shape_item_bg_long_maincolor"
            android:paddingLeft="4dp">

            <TextView
                android:id="@+id/tv_item_homepage_goods_huodao_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="货道:"
                android:textColor="@color/white"
                android:textSize="@dimen/f_top_card" />

            <TextView
                android:id="@+id/tv_item_homepage_goods_huodao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_item_homepage_goods_huodao_title"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:text="11"
                android:textColor="@color/white"
                android:textSize="@dimen/f_top_card" />

            <TextView
                android:id="@+id/tv_item_homepage_goods_kucun"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="@dimen/f_top_card" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_item_homepage_goods_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_height_card"
            android:layout_below="@+id/rl_item_goods_title"
            android:src="@drawable/b1" />
        <!--android:layout_marginTop="@dimen/padding_16dp"-->

        <TextView
            android:id="@+id/tv_item_homepage_goods_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_height_card"
            android:layout_below="@+id/iv_item_homepage_goods_img"
            android:gravity="center"
            android:text="雪碧"
            android:textSize="@dimen/f_title_card" />
        <!--android:layout_marginTop="@dimen/padding_16dp"-->

        <TextView
            android:id="@+id/tv_item_homepage_goods_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_homepage_goods_title"
            android:gravity="center"
            android:text="¥ 2.5"
            android:textColor="@color/mainColor"
            android:padding="@dimen/padding_4dp"
            android:textSize="@dimen/f_title_card" />
            <!--android:layout_marginBottom="8dp"-->
            <!--android:layout_marginTop="@dimen/padding_8dp"-->
    </RelativeLayout>
</android.support.v7.widget.CardView>