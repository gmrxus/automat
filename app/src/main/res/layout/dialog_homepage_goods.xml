<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_dialog_goods_title"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="@color/gray_9E"
        android:gravity="center"
        android:text="灌装雪碧 333ml"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/iv_dialog_goods_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/iv_dialog_goods_img"
        android:layout_width="360dp"
        android:layout_height="193dp"
        android:background="@color/gray_9E"
        android:padding="8dp"
        android:src="@drawable/b1"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="43dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="80dp"
        android:layout_height="71dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="价格(¥):"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_dialog_goods_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_dialog_goods_price"
        app:layout_constraintVertical_bias="0.47" />

    <TextView
        android:id="@+id/tv_dialog_goods_price"
        android:layout_width="94dp"
        android:layout_height="71dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="2.00"
        android:textColor="@color/mainColor"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/iv_dialog_goods_img"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="应付金额:"
        android:textColor="@color/mainColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_dialog_goods_price"
        app:layout_constraintTop_toTopOf="@+id/tv_dialog_goods_price" />

    <TextView
        android:id="@+id/tv_dialog_goods_money"
        android:layout_width="155dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="2.00"
        android:textColor="@color/mainColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_dialog_goods_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_dialog_goods_price" />


    <ImageView
        android:id="@+id/iv_dialog_goods_core_img"
        android:layout_width="146dp"
        android:layout_height="126dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/mainColor"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_goods_price"
        app:srcCompat="@drawable/b1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="358dp"
        android:layout_height="34dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/mainColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_dialog_goods_countdown"
        android:layout_width="361dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="支付倒计时:"
        android:textColor="@color/mainColor"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ivbtn_dialog_goods_alipay"
        android:layout_width="166dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toEndOf="@+id/iv_dialog_goods_core_img"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/alipay"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/ivbtn_dialog_goods_wxpay"
        android:layout_width="166dp"
        android:layout_height="45dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/ivbtn_dialog_goods_alipay"
        app:layout_constraintTop_toBottomOf="@+id/ivbtn_dialog_goods_alipay"
        app:srcCompat="@drawable/wxpay" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="166dp"
        android:layout_height="27dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="请选择支付方式:"
        android:textColor="@color/mainColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toEndOf="@+id/iv_dialog_goods_core_img"
        app:layout_constraintTop_toTopOf="@+id/iv_dialog_goods_core_img" />


</android.support.constraint.ConstraintLayout>